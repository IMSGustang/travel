<%= content_for :active_helps do %>
    active
<% end %>

<%= content_for :headmobile do %>
    <title>Pusat Bantuan</title>
<% end %>

<%= content_for :mobile do %>
    <div class="data-cover-evoucher">
      <div class="card card-body">
        <h6 class="mb-0">
          Pusat Informasi Bantuan
        </h6>
        <p class="mb-0">
          Kami disini untuk melayani & membantu anda
        </p>
      </div>
    </div>

    <div class="data-helps">
      <% if @data_faq %>
          <div id="accordion">
            <div class="card">
              <% @data_faq.each do |faq| %>
                  <% faq['sub_kategori'].each do |subkat| %>
                      <div class="card-header" id="jamaah<%= subkat['id_subkategori'] %>">
                        <h5 class="mb-0">
                          <button class="btn btn-link" data-toggle="collapse" data-target="#helps<%= subkat['id_subkategori'] %>" aria-expanded="true" aria-controls="helps<%= subkat['id_subkategori'] %>">
                            <%= subkat['nama_subkategori'] %>
                          </button>
                        </h5>
                      </div>

                      <div id="helps<%= subkat['id_subkategori'] %>" class="collapse" aria-labelledby="jamaah<%= subkat['id_subkategori'] %>" data-parent="#accordion">
                        <div class="card-body">
                          <% subkat['artikel'].each do |artikel| %>
                              <h2 class="mb-2" style="text-transform: none !important;">
                                <%= artikel['judul'].titlecase %>
                              </h2>
                              <div class="desc">
                                <%= artikel['artikel'].html_safe %>
                              </div>
                          <% end %>
                        </div>
                      </div>
                  <% end %>
              <% end %>
            </div>
          </div>
      <% else %>
          Mohon maaf, untuk sementara dalam tahap perbaikan
      <% end %>
    </div>
<% end %>

<% content_for :footmobile do %>
    <script type="text/javascript">

    </script>
<% end %>