<% content_for :head do %>
    <title>Kategori Penambahan Biaya | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-3 pr-4">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-9 pl-0 pr-2 ml-15">
            <div class="_landing | w-breadcrumb">
              <ol class="breadcrumb border-bottom-0">
                <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                <li class="breadcrumb-item active">Kategori penambahan biaya</li>
              </ol>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="card c-dashboard-user">
              <%= render template: 'accounts/partials/bannerTop' %>
            </div>

            <!-- --------------------------------------------------- -->
            <div class="additional-cost">
              <h2 class="title-cost text-center mt-4 mb-0">
                Penambahan Biaya
              </h2>
              <p class="text-center">
                Pilih salah satu penambahan biaya dibawah ini
              </p>

              <div class="card-group">
                <% @maklumat_check['option'].each do |item| %>
                <div class="card">
                  <%= image_tag 'lib/icon/services_mitra.png', :class => 'mx-auto d-block card-img-top' %>
                  <div class="card-body">
                    <%= item['text'].html_safe %>
                  </div>
                  <div class="card-footer">
                    <a href="/penambahan-biaya-paket-umrah?token=<%= Encryption::encode({no_trans: Encryption::decode(params[:token])[0]['no_trans'], no_request: Encryption::decode(params[:token])[0]['no_request'], kode_booking: Encryption::decode(params[:token])[0]['kode_booking'], jamaah: item['jamaah']}) %>" class="btn btn-block btn-danger">Pilih</a>
                  </div>
                </div>
                <% end %>
              </div>
            </div>
            <!-- --------------------------------------------------- -->
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
<% end %>

<% content_for :foot do %>
    <script type="text/javascript">

    </script>
<% end %>