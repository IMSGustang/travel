        $(function () {
            $("#tooltip2").popover({
                content: "Tiket pesawat pulang - pergi",
                trigger: 'hover',
                placement: 'top',
                delay: {show: 0, hide: 0}
            });
            $("#tooltip3").popover({
                content: "Hotel Madinah & Makkah",
                trigger: 'hover',
                placement: 'top',
                delay: {show: 0, hide: 0}
            });
            $("#tooltip4").popover({
                content: "Bus Antar - Jemput",
                trigger: 'hover',
                placement: 'top',
                delay: {show: 0, hide: 0}
            });
            $("#tooltip5").popover({
                content: "Koper, Baju Ihram dan Baju Batik",
                trigger: 'hover',
                placement: 'top',
                delay: {show: 0, hide: 0}
            });
        });
    </script>
<% end %>