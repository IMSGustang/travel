<%= content_for :headmobile do %>
    <title>Registers abutours</title>
<% end %>

<%= content_for :mobile do %>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/fingerprintjs2/1.5.1/fingerprint2.min.js"></script>

    <div class="data-registers">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-1">
            Belum Memiliki Akun
          </h5>
          <p class="mb-0">
            Daftar Sekarang Juga
          </p>
        </div>

        <div class="card-body pt-2">
          <table class="table table-sm mb-4 mt-0">
            <tbody>
            <tr>
              <td>
                <a href="auth/facebook" class="btn btn-block btn-social btn-outline-secondary" id="authfb">
                  <%= image_tag 'lib/icon/fb-logo.png' %>
                  Facebook
                </a>
              </td>
              <td>
                <a href="auth/google_oauth2" class="btn btn-block btn-social btn-outline-secondary" id="authgplus">
                  <%= image_tag 'lib/icon/gg-logo.png' %>
                  Google
                </a>
              </td>
            </tr>
            </tbody>
          </table>

          <p class="text-center title-or mb-0">
            <span>atau</span>
          </p>
          <hr/>

          <form id="needs-validation" method="post" action="/api/register" novalidate>
            <input type="hidden" name="afb" id="afb">
            <div class="form-group">
              <label>Nama Lengkap</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i data-feather="user"></i>
                  </span>
                </div>
                <input type="text" name="nama" class="form-control" id="validationCustom01" placeholder="Nama lengkap" required>
              </div>
            </div>

            <div class="form-group">
              <label>Nomor Telepon</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i data-feather="phone-forwarded"></i>
                  </span>
                </div>
                <input type="number" name="telepon" class="form-control" id="validationCustom02" placeholder="No telepon" required>
              </div>
            </div>

            <div class="form-group">
              <label>Email</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i data-feather="mail"></i>
                  </span>
                </div>
                <input type="text" name="email" class="form-control" id="validationCustom04" placeholder="E-mail" required>
              </div>

            </div>

            <div class="form-group">
              <label>Password</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text">
                    <i data-feather="lock"></i>
                  </span>
                </div>
                <input type="password" name="password" class="form-control" id="validationCustom03" placeholder="Password" required>
              </div>
            </div>

            <div class="form-group">
              <p class="mb-0">
                Dengan klik daftar, kamu telah menyetujui Aturan Penggunaan dan Kebijakan Privasi dari
                abutours.com
              </p>
            </div>

            <div class="form-group mb-4">
              <button type="submit" class="btn btn-block btn-daftar btn-success">Daftar</button>
            </div>
          </form>

          <div class="title-register text-center">
            <p class="mb-0">
              Anda Sudah Memiliki Akun ?
            </p>
            <a href="/abutours-login" class="text-danger text-uppercase">
              Login Sekarang
            </a>
          </div>
        </div>
      </div>
    </div>
<% end %>

<%= content_for :mobile do %>
    <script type="text/javascript">
        new Fingerprint2().get(function (result, components) {
            $('#afb').val(result);
            var _link1 = $("#authgplus").attr('href')
            var _link2 = $("#authfb").attr('href')
            $("#authgplus").attr('href', _link1 + '?fp=' + result);
            $("#authfb").attr('href', _link2 + '?fp=' + result);
        });
    </script>
<% end %>
