                <!-- --------------------------------------------------- -->
                <div class="swiper-container swiper-slide-produk">
                  <div class="swiper-wrapper">
                    <div class="swiper-slide">
                      <%= image_tag !data['gambar'].nil? ? data['gambar'] : '', :class => 'mx-auto d-block' %>
