<% content_for :head do %>
    <title>Paket Umrah Saya | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-3 pr-4 sticky">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0 theiaStickySidebar">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-9 pl-0 pr-2 ml-15">
            <div class="_landing | w-breadcrumb">
              <ol class="breadcrumb border-bottom-0">
                <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                <li class="breadcrumb-item active">Paket umrah</li>
              </ol>
            </div>
            <!-- --------------------------------------------------- -->
            <% if @data.present? %>
                <% @data.each do |item| %>
                    <div class="c-bg-white-accounts c-packetowner mt-0 mb-2">
                      <div class="card c-dashboard-paket c-packetowner__item">
                        <div class="card-body c-dashboard-paket__item c-packetowner__item--body p-0">
                          <table class="table table-paket m-0">
                            <tr>
                              <td class="c-paket__body">
                                <div class="media">
                                  <%= image_tag item['gambar']['url'], :class => 'd-flex align-self-center mr-3', :alt => '' %>
                                  <div class="media-body pt-2">
                                    <p class="item-link item-line">
                                      <%= item['nama_paket'] %>
                                    </p>

                                    <h4 class="mt-2 mb-0"><%= number_to_currency(item['harga_jual'], precision: 0, unit: "Rp ") %></h4>

                                    <p class="card-text packet-city m-0">
                                      <small class="text-muted">
                                        <%= item['kota'] %>
                                      </small>
                                    </p>
                                    <!--<p class="card-text packet-city m-0">-->
                                      <!--<small class="text-muted">-->
                                        <!--Kantor Tanah bumbu-->
                                      <!--</small>-->
                                    <!--</p>-->
                                  </div>
                                </div>
                              </td>

                              <td width="100" class="c-paket__footer">
                                <a href="/paket-saya/<%= item['notrans'] %>?kp=<%= item['kode_paket']%>" class="btn btn-block btn-danger">
                                  Pesan Paket
                                </a>
                                <a target="_blank" href="/detail-paket/<%= @data_toko ? @data_toko['nama_toko'] : 'un-knownstore_id' %>/<%= item['kode_paket'] %>/<%= item['nama_paket_seo'] %>" class="btn btn-block btn-outline-success">
                                  Detail Paket
                                </a>
                                <a target="_blank" href="/edit-packet/<%= item['kode_paket']%>" class="btn btn-block btn-outline-warning">
                                  Ubah Paket
                                </a>
                              </td>
                            </tr>
                          </table>
                        </div>
                      </div>
                    </div>
                <% end %>
            <% else %>
                <div class="w-blank text-center p-5">
                  <%= image_tag 'icon_blank/no_seat_umroh.png', :class => 'mx-auto d-block', :alt => '' %>
                  <p class="mb-0">
                    Maaf! Anda belum memiliki seat, mohon unruk membuat paket terlebih dahulu.
                  </p>
                </div>
            <% end %>
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
<% end %>
<% content_for :foot do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".js-example-placeholder-single").select2({});
        });
    </script>
<% end %>