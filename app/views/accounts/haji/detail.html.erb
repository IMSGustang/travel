<% content_for :head do %>
    <title>Detil Paket Umrah | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
        <div class="container">
            <div class="row">
                <!-- --------------------------------------------------- -->
                <div class="col-3 pr-4 sticky">
                    <div class="card c-dashboard-side pb-5">
                        <div class="card-body c-dashboard-side__item p-0 theiaStickySidebar">
                            <%= render template: 'accounts/partials/sidebar' %>
                        </div>
                    </div>
                </div>
                <!-- --------------------------------------------------- -->
                <div class="col-9 pl-0 pr-2 ml-15">
                    <div class="_landing | w-breadcrumb">
                        <ol class="breadcrumb border-bottom-0">
                            <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                            <li class="breadcrumb-item active">Paket naurah</li>
                        </ol>
                    </div>
                    <!-- --------------------------------------------------- -->
                    <div class="card c-dashboard-user">
                        <%= render template: 'accounts/partials/bannerTop' %>
                    </div>
                    <!-- --------------------------------------------------- -->
                    <div class="c-bg-white-accounts">
                        <% if data %>
                            <section class="c-abutravel__detil">
                                <div class="card c-abutravel__detil-card border-none m-0">
                                    <div class="card-body c-abutravel__detil-card--item">
                                        <div class="media">
                                            <div class="media-body">
                                                <table class="table m-0 p-0">
                                                    <tr>
                                                        <td class="p-0">
                                                            <h3 class="mt-1 mb-3 text-uppercase">
                                                                <%= data['nama'] %>
                                                            </h3>
                                                            <h6 class="mt-1 mb-3 text-uppercase">
                                                                <%= data['kantor'] %>
                                                            </h6>
                                                            <h3 class="mt-0 mb-1">
                                                                <%= data['tipe_curr'] %> <%= number_with_delimiter(data['harga_jual'].to_i) %>
                                                            </h3>

                                                            <p class="mt-3 mb-1">
                                                                <button type="button" class="btn btn-outline-danger" id="tooltip2">
                                                                    <%= image_tag 'lib/icon/ticket.png', :class => 'mx-auto d-block', :height => '33px' %>
                                                                </button>
                                                                <button type="button" class="btn btn-outline-danger" id="tooltip3">
                                                                    <%= image_tag 'lib/icon/hotel.png', :class => 'mx-auto d-block', :height => '33px' %>
                                                                </button>
                                                                <button type="button" class="btn btn-outline-danger" id="tooltip4">
                                                                    <%= image_tag 'lib/icon/busway.png', :class => 'mx-auto d-block', :height => '33px' %>
                                                                </button>
                                                                <button type="button" class="btn btn-outline-danger" id="tooltip5">
                                                                    <%= image_tag 'lib/icon/perlengkapan.png', :class => 'mx-auto d-block', :height => '33px' %>
                                                                </button>
                                                            </p>
                                                        </td>
                                                        <td width="151" class="p-0">
                                                            <button type="button" class="btn btn-block btn-danger" data-toggle="modal" data-target="#information">
                                                                Pesan Sekarang
                                                            </button>
                                                        </td>
                                                    </tr>
                                                </table>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card c-tabs__detil border-none">
                                    <div class="card-header c-tabs__detil-header">
                                        <ul class="nav nav-pills nav-justified" id="myTab" role="tablist">
                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#informasi" role="tab"
                                                   aria-controls="informasi">Persyaratan Umum</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#fasilitas" role="tab"
                                                   aria-controls="hotel">Fasilitas</a>
                                            </li>
                                        </ul>
                                    </div>

                                    <div class="tab-content">
                                        <div class="tab-pane tab-pane-informasi fade show active" id="informasi" role="tabpanel">
                                            <div class="card-body">
                                                <% data['su'].each do |row| %>
                                                    <dl class="row">
                                                        <dt class="col-sm-3 text-uppercase"><%= row['name'] %></dt>
                                                        <dd class="col-sm-9">
                                                            <ul>
                                                                <% row['teks'].each do |rowTeks| %>
                                                                    <li><%= rowTeks['teks'] %></li>
                                                                <% end %>
                                                            </ul>
                                                        </dd>
                                                    </dl>
                                                <% end %>
                                            </div>
                                        </div>

                                        <div class="tab-pane tab-pane-hotel fade" id="fasilitas" role="tabpanel">
                                            <div class="card-body card-block-maskapai">
                                                <dl class="row">
                                                    <dt class="col-3">Maskapai Pergi</dt>
                                                    <dd class="col-9">
                                                        <table>
                                                            <tr>
                                                                <td>
                                                                    <%= image_tag data['maskapai_pergi_haji']['images_maskapai'], :class => 'mx-auto d-block' %>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Nama Maskapai</dt>
                                                    <dd class="col-9">
                                                        <%= data['maskapai_pergi_haji']['nama_maskapai'] %>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Fasilitas</dt>
                                                    <dd class="col-9">
                                                        <%= data['maskapai_pergi_haji']['fasilitas_maskapai'] %>
                                                    </dd>
                                                </dl>
                                            </div>

                                            <div class="card-body card-block-maskapai">
                                                <dl class="row">
                                                    <dt class="col-3">Maskapai Pulang</dt>
                                                    <dd class="col-9">
                                                        <table>
                                                            <tr>
                                                                <td>
                                                                    <%= image_tag data['maskapai_pulang_haji']['images_maskapai'], :class => 'mx-auto d-block' %>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Nama Maskapai</dt>
                                                    <dd class="col-9">
                                                        <%= data['maskapai_pulang_haji']['nama_maskapai'] %>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Fasilitas</dt>
                                                    <dd class="col-9">
                                                        <%= data['maskapai_pulang_haji']['fasilitas_maskapai'] %>
                                                    </dd>
                                                </dl>
                                            </div>

                                            <div class="card-body card-block-hotel">
                                                <dl class="row">
                                                    <dt class="col-3">Hotel Madinah</dt>
                                                    <dd class="col-9">
                                                        <table>
                                                            <tr>
                                                                <td>
                                                                    <%= image_tag data['hotel_medinah_haji']['images_hotel'], :class => 'mx-auto d-block' %>
                                                                </td>
                                                                <td>
                                                            </tr>
                                                        </table>
                                                        <p class="card-text card-text-rating">
                          <span class="text-uppercase">
                            <%= data['hotel_medinah_haji']['nama_hotel'] %>
                          </span>
                                                            <% (1..data['hotel_medinah_haji']['rating']).each do |i| %>
                                                                <i class="icon-star-full2"></i>
                                                            <% end %>
                                                        </p>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Tentang Hotel</dt>
                                                    <dd class="col-9">
                                                        <%= data['hotel_medinah_haji']['deskripsi'] %>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Fasilitas Umum</dt>
                                                    <dd class="col-9">
                                                        <%= data['hotel_medinah_haji']['fasilitas'] %>
                                                    </dd>
                                                </dl>
                                            </div>

                                            <div class="card-body card-block-hotel">
                                                <dl class="row">
                                                    <dt class="col-3">Hotel Makkah</dt>
                                                    <dd class="col-9">
                                                        <table>
                                                            <tr>
                                                                <td>
                                                                    <%= image_tag data['hotel_mekah_haji']['images_hotel'], :class => 'mx-auto d-block' %>
                                                                </td>
                                                            </tr>
                                                        </table>

                                                        <p class="card-text card-text-rating">
                                                            <span class="text-uppercase"><%= data['hotel_mekah_haji']['nama_hotel'] %></span>
                                                            <% (1..data['hotel_mekah_haji']['rating']).each do |i| %>
                                                                <i class="icon-star-full2"></i>
                                                            <% end %>
                                                        </p>
                                                    </dd>
                                                </dl>

                                                <dl class="row">
                                                    <dt class="col-3">Tentang Hotel</dt>
                                                    <dd class="col-9">
                                                        <%= data['hotel_mekah_haji']['deskripsi'] %>
                                                    </dd>
                                                </dl>


                                                <dl class="row">
                                                    <dt class="col-3">Fasilitas Umum</dt>
                                                    <dd class="col-9">
                                                        <%= data['hotel_mekah_haji']['fasilitas'] %>
                                                    </dd>
                                                </dl>
                                            </div>

                                            <div class="card-body card-block-hotel border-none">
                                                <dl class="row">
                                                    <dt class="col-12">Tour & Itinerary</dt>
                                                </dl>
                                                <dl class="row">
                                                    <dt class="col-3"><%= data['tour_list_mekah_haji']['nama_tour'] %></dt>
                                                    <dd class="col-9">
                                                        <ul>
                                                            <% data['tour_list_mekah_haji']['rute'].each do |rowDetail| %>
                                                                <li><%= rowDetail['rute'] %></li>
                                                            <% end %>
                                                        </ul>
                                                    </dd>
                                                </dl>
                                                <dl class="row">
                                                    <dt class="col-3"><%= data['tour_list_medinah_haji']['nama_tour'] %></dt>
                                                    <dd class="col-9">
                                                        <ul>
                                                            <% data['tour_list_medinah_haji']['rute'].each do |rowDetail| %>
                                                                <li><%= rowDetail['rute'] %></li>
                                                            <% end %>
                                                        </ul>
                                                    </dd>
                                                </dl>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        <% else %>
                            <p class="text-center">
                                Data Tidak Ditemukan
                            </p>
                        <% end %>
                    </div>
                    <!-- --------------------------------------------------- -->
                </div>
                <!-- --------------------------------------------------- -->
            </div>
        </div>
    </section>

    <div class="modal fade modal-information" id="information" tabindex="-1" role="dialog" aria-labelledby="information" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form method="get" action="/form-pemesanan-paket/<%= data['kode_produk'] %>">
                <input type="hidden" name="kk" value="<%= kode_kantor %>">
                <input type="hidden" name="bln" value="<%= bulan %>">
                <input type="hidden" name="th" value="<%= tahun %>">
                <input type="hidden" name="type" value="haji">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title text-muted">
                            Informasi Paket
                        </h3>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"><i class="icon-cross2"></i></span>
                        </button>
                    </div>

                    <ul class="nav nav-pills nav-justified" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#syarat" role="tab"
                               aria-controls="informasi">Syarat & Ketentuan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#visa" role="tab"
                               aria-controls="hotel">
                                Informasi Visa
                            </a>
                        </li>
                    </ul>

                    <div class="modal-body">
                        <div class="tab-content">
                            <div class="tab-pane tab-pane-informasi fade show active" id="syarat" role="tabpanel">
                                <div class="card-body c-syarat">
                                    <%= data['ket_lunas'] %>
                                </div>
                            </div>

                            <div class="tab-pane tab-pane-informasi fade" id="visa" role="tabpanel">
                                <div class="card-body c-visa">
                                    <table class="table table-sm">
                                        <tr>
                                            <td class="text-justify">
                                                <%= data['info_visa'].capitalize %>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <a href="<%= data['sk_file'] %>" style="padding: 10px; margin: 10px;" download="">download syarat dan ketentuan</a>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-lg btn-block btn-danger">
                            Pesan Sekarang
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
<% end %>
<% content_for :foot do %>
