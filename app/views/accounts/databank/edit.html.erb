<% content_for :head do %>
    <title>Edit Data Bank | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard" data-turbolinks="false">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-3 pr-4">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-9 pl-0 pr-2 ml-15">
            <div class="_landing | w-breadcrumb">
              <ol class="breadcrumb border-bottom-0">
                <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                <li class="breadcrumb-item active">Edit Data Bank</li>
              </ol>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="card c-dashboard-user">
              <%= render template: 'accounts/partials/bannerTop' %>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="c-bg-white-accounts">
              <form action="/api/data-bank-update" method="post">
                <input type="hidden" name="id" value="<%= @data[0]['kode_bank'] %>">
                <div class="card c-dashboard-content mt-0">
                  <div class="card-body c-dashboard-content__item">
                    <p>
                      Edit Bank
                    </p>
                    <div class="form-group row">
                      <div class="col-6">
                        <label>Nama Bank</label>
                        <select id="Adatabank" name="nama_bank" class="nama_bank">
                          <option value="<%= @data[0]['nama_bank'] %>" data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>"><%= @data[0]['nama_bank'] %></option>
                          <option value="76023" title="Out of Stock" disabled>Pilih...</option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BCA" data-suffix="<small></small>">
                            BCA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BCA SYARIAH">
                            BCA SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BNI">
                            BNI
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BNI SYARIAH">
                            BNI SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BRI">
                            BRI
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BRI SYARIAH">
                            BRI SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="BTN">
                            BTN
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="CIMB NIAGA">
                            CIMB NIAGA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="MANDIRI">
                            MANDIRI
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="MANDIRI SYARIAH">
                            MANDIRI SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="MEGA">
                            MEGA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="OCBC NISP">
                            OCBC NISP
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="PERMATA">
                            PERMATA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="LAINNYA">
                            LAINNYA
                          </option>
                        </select>
                      </div>

                      <div class="col-6">
                        <label>Nama Rekening</label>
                        <input type="text" name="atas_nama" class="form-control" value="<%= @data[0]['atas_nama'] %>">
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-6">
                        <label>Nomor Rekening</label>
                        <input type="text" name="no_rekening" class="form-control" value="<%= @data[0]['no_rekening'] %>">
                      </div>

                      <div class="col-6">
                        <label>Cabang</label>
                        <input type="text" name="cabang" class="form-control" value="<%= @data[0]['cabang'] %>">
                      </div>
                    </div>

                    <div class="form-group text-right">
                      <a href="/data-bank" class="btn btn-sm btn-light">Kembali</a>
                      <button class="btn btn-sm btn-success">Simpan</button>
                    </div>

                  </div>
                </div>

              </form>
            </div>
            <!-- --------------------------------------------------- -->
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
<% end %>

<% content_for :foot do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.nama_bank').prettyDropdown({});
        });
    </script>
<% end %>