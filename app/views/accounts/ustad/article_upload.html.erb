<% content_for :head do %>
    <title>Ustad | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-sm-3 pr-0">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-sm-9 pl-1">
            <!-- --------------------------------------------------- -->
            <div class="c-bg-white-accounts">
              <div class="card c-dashboard-user">
                <%= render template: 'accounts/partials/bannerTop' %>
              </div>
              <!-- --------------------------------------------------- -->
              <h5 class="card-title text-center mb-2 mt-4">
                Upload Article
              </h5>
              <ul class="nav justify-content-center tabs-voucher mb-2">
                <li class="nav-item">
                  <a class="nav-link <%= active_class('/upload-artikel') %>" href="/upload-artikel">Upload Artikel</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link <%= active_class('/riwayat-artikel') %>" href="/riwayat-artikel">Riwayat Artikel</a>
                </li>
              </ul>
              <!-- --------------------------------------------------- -->
              <form action="" method="post">
                <div class="card c-dashboard-content mt-1">
                  <div class="card-body c-dashboard-content__item pt-4">
                    <div class="row justify-content-center">
                      <div class="col-sm-10">

                      	<div class="form-group">
                      		<label>Gambar Artikel</label>
                      		<input type="file" name="files">
                      	</div>

                        <div class="form-group">
                          <label>Judul Artikel</label>
                          <input type="text" class="form-control" placeholder="Judul artikel anda">
                        </div>

                        <div class="form-group">
                          <label>Artikel</label>
                          <textarea class="form-control" placeholder="Tulis artikel" style="height: 200px;"></textarea>
                        </div>

                        <div class="form-group">
                          <table class="table table-flex">
                            <tr>
                              <td class="bt-none">
                                <a href="" class="btn btn-lg btn-block btn-secondary">Kembali</a>
                              </td>
                              <td class="bt-none">
                                <button class="btn btn-lg btn-block btn-success">Upload</button>
                              </td>
                            </tr>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <!-- --------------------------------------------------- -->
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
    <script type="text/javascript">
	    $(document).ready(function () {
	        // enable fileuploader plugin
	        $('input[name="files"]').fileuploader();
	    });
	</script>
<% end %>