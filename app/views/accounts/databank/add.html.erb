<% content_for :head do %>
    <title>Tambah Data Bank | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard" data-turbolinks="false">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-3 pr-4 sticky">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0 theiaStickySidebar">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-9 pl-0 pr-2 ml-15">
            <div class="_landing | w-breadcrumb">
              <ol class="breadcrumb border-bottom-0">
                <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                <li class="breadcrumb-item active">Tambak Data Bank</li>
              </ol>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="card c-dashboard-user">
              <%= render template: 'accounts/partials/bannerTop' %>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="c-bg-white-accounts">
              <form action="/api/data-bank" method="post" id="needs-validation" novalidate>
                <div class="card c-dashboard-content mt-0">
                  <div class="card-body c-dashboard-content__item">
                    <p>
                      Tambah Data Bank
                    </p>
                    <div class="form-group row">
                      <div class="col-6">
                        <label>Nama Bank</label>
                        <select id="Adatabank" name="nama_bank" class="nama_bank" required>
                          <option value="76023" title="Out of Stock" disabled>Pilih...</option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="014" data-suffix="<small></small>">
                            BCA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="536">
                            BCA SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="009">
                            BNI
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="009-S">
                            BNI SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="002">
                            BRI
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="422">
                            BRI SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="200">
                            BTN
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="022">
                            CIMB NIAGA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="008">
                            MANDIRI
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="451">
                            MANDIRI SYARIAH
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="426">
                            MEGA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="028">
                            OCBC NISP
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="013">
                            PERMATA
                          </option>
                          <option data-prefix="<span aria-hidden='true' class='icon-checkmark2'></span>" value="LAINNYA">
                            LAINNYA
                          </option>
                        </select>
                      </div>

                      <div class="col-6">
                        <label>Nama Rekening</label>
                        <input type="text" name="atas_nama" class="form-control" required>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-6">
                        <label>Nomor Rekening</label>
                        <input type="number" name="no_rekening" class="form-control" required>
                      </div>

                      <div class="col-6">
                        <label>Cabang</label>
                        <input type="text" name="cabang" class="form-control" required>
                      </div>
                    </div>

                    <div class="form-group text-right">
                      <a href="/data-bank" class="btn btn-sm btn-light">Kembali</a>
                      <button class="btn btn-sm btn-success">Simpan</button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <!-- --------------------------------------------------- -->
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
<% end %>

<% content_for :foot do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Adatabank').prettyDropdown({
                afterLoad: function () {
                    console.log('abutours.com | best travel services');
                }
            });
        });
    </script>
    <script type="text/javascript">
        (function() {
            "use strict";
            window.addEventListener("load", function() {
                var form = document.getElementById("needs-validation");
                form.addEventListener("submit", function(event) {
                    if (form.checkValidity() == false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add("was-validated");
                }, false);
            }, false);
        }());
    </script>
<% end %>