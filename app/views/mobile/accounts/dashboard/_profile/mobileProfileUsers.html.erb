<%= content_for :active_profile do %>
    active
<% end %>

<%= content_for :headmobile do %>
    <title>Profile customer abutours</title>
<% end %>

<%= content_for :mobile do %>
    <div class="data-fitur">
      <div class="card card-body">
        <table class="table table-sm">
          <tbody>
          <tr>
            <td>
              <a href="/tambah-saldo-abupay">
                <div class="media">
                  <div class="align-self-center mr-2">
                    <div class="icons-sm icons-deposit"></div>
                  </div>
                  <div class="media-body">
                    <h6 class="text-uppercase text-left mt-0 mb-0">
                      Deposit
                    </h6>
                    <h4 class="text-left mb-0">
                      Rp <%= number_to_currency(session['account_saldo'], precision: 0, unit: " ") %>
                    </h4>
                  </div>
                </div>
              </a>
            </td>
            <td>
              <a href="/tukar-poin" class="w-100">
                <div class="media">
                  <div class="media-body">
                    <h6 class="text-uppercase text-right mt-0 mb-0">
                      Poin
                    </h6>
                    <h4 class="text-right mb-0">
                      <%= session[:account_poin] %> pt
                    </h4>
                  </div>
                  <div class="align-self-center ml-2">
                    <div class="icons-sm icons-poin"></div>
                  </div>
                </div>
              </a>
            </td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="data-picture-users">
      <div class="card">
        <div class="card-body">
          <div class="media">
            <div class="media-images mr-3">
              <%= image_tag !session[:account_detail][:foto]['url'].nil? ? session[:account_detail][:foto]['url'] : "assets/no_images/no_package_2.png", :class => 'align-self-center', :alt => '', onerror: 'assets/no_images/no_package_2.png"' %>
            </div>

            <div class="media-body">
              <h5 class="mb-2">
                <%= session[:account_nama_depan] %> <%= session[:account_nama_belakang] %>
              </h5>

              <p class="text-uppercase mb-2">
                <%= session['account_kode_user'] %>
              </p>

              <table class="table table-sm mb-3 mt-3">
                <tbody>
                <tr>
                  <td class="level-users">
                    <small>Level User</small>
                    <p class="mb-0">
                      <%= session[:nama_role] %>
                    </p>
                  </td>
                  <td class="referal text-right">
                    <small>Kode Referal</small>
                    <p class="text-danger mb-0">
                      <%= session[:account_kode_referral] %>
                    </p>
                  </td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%
      @progressbar = 0
      if @progress_profil['data']['email'] == 1
        @email = "text-success"
        @progressbar = @progressbar + 1
      else
        @email = "text-muted"
      end

      if @progress_profil['data']['alamat'] == 1
        @alamat = "text-success"
        @progressbar = @progressbar + 1
      else
        @alamat = "text-muted"
      end

      if @progress_profil['data']['handphone'] == 1
        @handphone = "text-success"
        @progressbar = @progressbar + 1
      else
        @handphone = "text-muted"
      end
    %>
    <% unless @progressbar > 2 %>
        <div class="data-data-progressbar">
          <div class="card">
            <a class="card-link" data-toggle="collapse" href="#linkprogress" role="button"
               aria-expanded="false" aria-controls="linkprogress">
              <div class="card-body">
                <table class="table table-sm mb-0">
                  <tbody>
                  <tr>
                    <td>
                      <small>Lengkapi akun (<%= @progressbar %> dari 3)</small>
                      <div class="progress" style="height: 6px">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%"
                             aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                        </div>
                      </div>
                    </td>

                    <td width="30" class="text-center">
                      <i class="ion-chevron-down"></i>
                    </td>
                  </tr>
                  </tbody>
                </table>
              </div>
            </a>
          </div>
          <div class="collapse" id="linkprogress">
            <div class="card card-collapse">
              <div class="card-body">
                <table class="table table-sm mb-0">
                  <tbody>
                  <tr>
                    <td width="20">
                                <span class="<%= @email %>">
                                    <i class="ion-ios-checkmark"></i>
                                </span>
                    </td>
                    <td>
                                <span class="<%= @email %>">
                                    Konfirmasi email
                                </span>
                    </td>
                  </tr>
                  <tr>
                    <td width="20">
                                <span class="<%= @alamat %>">
                                    <i class="ion-ios-checkmark"></i>
                                </span>
                    </td>
                    <td>
                                <span class="<%= @alamat %>">
                                    Alamat anda
                                </span>
                    </td>
                  </tr>
                  <tr>
                    <td width="20">
                                <span class="<%= @handphone %>">
                                    <i class="ion-ios-checkmark"></i>
                                </span>
                    </td>
                    <td>
                                <span class="<%= @handphone %>">
                                    Nomor telepon
                                </span>
                    </td>
                  </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
    <% end %>
    <div class="data-myFiture">
      <div class="card">
        <div class="card-body">
          <table class="table table-sm mb-0">
            <tbody>
            <tr>
              <td class="pb-0 border-0">
                <table class="table table-sm m-0">
                  <tr>
                    <td>
                      <div class="d-inline w-100">
                        <a href="/pengaturan-seat" class="badge badge-seat">
                          <i data-feather="sliders"></i>
                        </a>
                        <p class="text-center m-0">
                          Seat Umrah
                        </p>
                      </div>
                    </td>

                    <td>
                      <div class="d-inline w-100">
                        <a href="/data-jamaah" class="badge badge-jamaah">
                          <i data-feather="users"></i>
                        </a>
                        <p class="text-center m-0">
                          Jamaah
                        </p>
                      </div>
                    </td>

                    <td>
                      <div class="d-inline w-100">
                        <a href="/fee" class="badge badge-fee">
                          <i data-feather="award"></i>
                        </a>
                        <p class="text-center m-0">
                          Fee
                        </p>
                      </div>
                    </td>

                    <td>
                      <div class="d-inline w-100">
                        <a href="/voucher-saya" class="badge badge-voucher">
                          <i data-feather="layers"></i>
                        </a>
                        <p class="text-center m-0">
                          Voucher
                        </p>
                      </div>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="data-myManifest">
      <div class="card">
        <div class="card-body">
          <table class="table table-sm mb-0">
            <tbody>
            <tr>
              <td>
                <a href="/pengajuan-penambahan-biaya">
                  <i data-feather="repeat"></i> Claim Transaksi
                </a>
              </td>
            </tr>
            <tr>
              <td>
                <a href="/daftar-penambahan-biaya-paket-umrah">
                  <i data-feather="file-plus"></i> Penambahan Biaya
                </a>
              </td>
            </tr>
            <tr>
              <td class="border-none">
                <a href="">
                  <i data-feather="file-text"></i> History Penambahan Biaya
                </a>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="data-myManifest">
      <div class="card">
        <div class="card-body">
          <table class="table table-sm mb-0">
            <tbody>
            <tr>
              <td>
                <a href="/pembayaran-umrah">
                  <i data-feather="bar-chart-2"></i> Pembelian
                </a>
              </td>
            </tr>
            <tr>
              <td>
                <a href="/pengaturan-akun-profile">
                  <i data-feather="settings"></i> Pengaturan Akun
                </a>
              </td>
            </tr>
            <tr>
              <td class="border-none">
                <a href="/informasi">
                  <i data-feather="bell"></i> Notifikasi
                </a>
              </td>
            </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="data-logOut">
      <div class="card">
        <div class="card-body">
          <a onclick="showModal()" href="/app/logout" class="btn btn-block btn-danger">Keluar Akun</a>
        </div>
      </div>
    </div>
<% end %>