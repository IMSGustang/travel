<% content_for :head do %>
    <title>Syarat & Ketentuan | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-3 pr-4 sticky">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0 theiaStickySidebar">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-9 pl-0 pr-2 ml-15">
            <div class="_landing | w-breadcrumb">
              <ol class="breadcrumb border-bottom-0">
                <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                <li class="breadcrumb-item active">Syarat & Ketentuan</li>
              </ol>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="card c-dashboard-user">
              <%= render template: 'accounts/partials/bannerTop' %>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="c-bg-white-accounts">
              <!-- --------------------------------------------------- -->
              <form action="" method="post">
                <div class="card c-dashboard-paket mt-1">
                  <div class="card-body c-dashboard-paket__item p-4">

                    <div class="row">
                      <div class="col-12">
                        <h3>
                          Syarat & Ketentuan
                        </h3>

                        <hr>
                        <hr class="double">

                        <p class="text-muted mb-2">
                          <small>Baca syarat & ketentuan sebelum melakukan pembelian paket umrah</small>
                        </p>

                        <div class="description_text">
                          <%= simple_format(@data) %>
                        </div>

                        <div class="form-group">
                          <div class="form-check mt-4">
                            <input id="checkbox1" type="checkbox" value="1" name="checkbox" class="form-check-input">
                            <label class="form-check-label" for="checkbox1">
                              Saya sangat setuju dengan syarat & ketentuan yang berlaku
                            </label>
                          </div>
                        </div>

                        <p class="">
                          <a id="nextLink" href="/form-pemesanan-paket/<%= params['id_produk'] %>?type=kemitraan&kk=<%= params['kk'] %>&th=<%= params['th'] %>&bln=<%= params['bln']%>&lu=<%= params['lu'] %>" class="btn btn-block btn-danger disabled">Lanjutkan Pembayaran</a>
                          <a id="nextLink-hidden" href="/form-pemesanan-paket/<%= params['id_produk'] %>?type=kemitraan&kk=<%= params['kk'] %>&th=<%= params['th'] %>&bln=<%= params['bln']%>&lu=<%= params['lu'] %>" class="btn btn-block btn-danger d-none">Lanjutkan Pembayaran</a>
                          <!--<a href="" class="btn btn-block btn-danger">Bayar Sekarang</a>-->
                        </p>

                      </div>
                    </div>

                  </div>
                </div>
              </form>
            </div>
            <!-- --------------------------------------------------- -->
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
<% end %>

<% content_for :foot do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#pilihvoucher').prettyDropdown({
                afterLoad: function () {
                    console.log('abutours.com | best travel services');
                }
            });
        });
    </script>
    <script type="text/javascript">
      $(document).ready(function(){
        $("#checkbox1").on('click', function() {
            if($('#checkbox1').is(':checked')){
              $('#nextLink-hidden').removeClass('d-none');
              $('#nextLink').addClass('d-none');
            }else{
              $('#nextLink-hidden').addClass('d-none');
              $('#nextLink').removeClass('d-none');
            }
        });
      });
    </script>
<% end %>