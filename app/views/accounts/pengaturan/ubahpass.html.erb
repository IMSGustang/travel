<% content_for :head do %>
    <title>Pengaturan Password | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
      <div class="container">
        <div class="row">
          <!-- --------------------------------------------------- -->
          <div class="col-3 pr-4 sticky">
            <div class="card c-dashboard-side pb-5">
              <div class="card-body c-dashboard-side__item p-0 theiaStickySidebar">
                <%= render template: 'accounts/partials/sidebar' %>
              </div>
            </div>
          </div>
          <!-- --------------------------------------------------- -->
          <div class="col-9 pl-0 pr-2 ml-15">
            <div class="_landing | w-breadcrumb">
              <ol class="breadcrumb border-bottom-0">
                <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                <li class="breadcrumb-item active">Pengaturan Password</li>
              </ol>
            </div>

            <!-- --------------------------------------------------- -->
            <div class="card c-dashboard-user c-dashboard-user-small">
              <%= render template: 'accounts/partials/bannerTop' %>
            </div>
            <!-- --------------------------------------------------- -->
            <div class="c-bg-white-accounts">
              <form class="form-costumes" action="/api/ubah-password" method="post" id="needs-validation" novalidate>
                <div class="card c-dashboard-content mt-1">
                  <h4 class="p-3">
                    Ubah Password
                  </h4>
                  <div class="card-body c-dashboard-content__item p-3">
                    <div class="form-group">
                      <label>Password</label>
                      <input type="password" name="old_password" class="form-control" value="" required>
                    </div>

                    <div class="form-group">
                      <label>Password Baru</label>
                      <input type="password" name="new_password" class="form-control" value="" required>
                    </div>
                    <div class="form-group">
                      <label>Konfirmasi Password</label>
                      <input type="password" name="conf_new_password" class="form-control" value="" required>
                    </div>

                    <table class="table table-flex">
                      <tr>
                        <td class="bt-none">
                          <a href="/" class="btn btn-sm btn-block btn-secondary">
                            Batal
                          </a>
                        </td>
                        <td class="bt-none">
                          <button type="submit" class="btn btn-sm btn-block btn-success">Simpan Perubahan</button>
                        </td>
                      </tr>
                    </table>
                  </div>
                </div>
              </form>
            </div>
            <!-- --------------------------------------------------- -->
          </div>
          <!-- --------------------------------------------------- -->
        </div>
      </div>
    </section>
<% end %>
<% content_for :foot do %>
    <script type="text/javascript">
        (function() {
            "use strict";
            window.addEventListener("load", function() {
                var form = document.getElementById("needs-validation");
                form.addEventListener("submit", function(event) {
                    if (form.checkValidity() == false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add("was-validated");
                }, false);
            }, false);
        }());
    </script>
<% end %>