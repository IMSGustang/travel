<% content_for :head do %>
    <title>Paket Haji Customer | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
        <div class="container">
            <div class="row">
                <!-- --------------------------------------------------- -->
                <div class="col-3 pr-4 sticky">
                    <div class="card c-dashboard-side pb-5">
                        <div class="card-body c-dashboard-side__item p-0 theiaStickySidebar">
                            <%= render template: 'accounts/partials/sidebar' %>
                        </div>
                    </div>
                </div>
                <!-- --------------------------------------------------- -->
                <div class="col-9 pl-0 pr-2 ml-15">
                    <div class="_landing | w-breadcrumb">
                        <ol class="breadcrumb border-bottom-0">
                            <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                            <li class="breadcrumb-item active">Paket haji</li>
                        </ol>
                    </div>
                    <!-- --------------------------------------------------- -->
                    <h3 class="mb-3">Semua Paket Haji</h3>
                    <% if data['status'] == 200 %>
                        <% data['data'].each do |row| %>
                        <div class="c-bg-white-accounts c-packetowner mt-0 mb-2">
                            <div class="card c-dashboard-paket c-packetowner__item">
                                <div class="card-body c-dashboard-paket__item c-packetowner__item--body p-0">
                                    <table class="table table-paket m-0">
                                        <tr>
                                            <td class="c-paket__body">
                                                <div class="media">
                                                    <%= image_tag row['gambar'], :class => 'd-flex align-self-center mr-3', :alt => '', onerror: 'this.error=null;this.src="/assets/no_images/no_package_1.png"' %>
                                                    <div class="media-body pt-2">
                                                        <p class="item-link item-line">
                                                            <%= row['nama'].capitalize %>
                                                        </p>

                                                        <h4 class="mt-2 mb-0"><%= row['tipe_curr'] %> <%= number_with_delimiter(row['harga_jual'].to_i) %></h4>

                                                        <p class="card-text packet-city m-0">
                                                            <small class="text-muted">
                                                                <%= row['kota'] %> - <%= row['kantor'].capitalize %>
                                                            </small>
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>

                                            <td width="100" class="c-paket__footer">
                                                <a href="/form-pemesanan-paket/<%= row['kode_produk'] %>?kk=<%= row['kdkantor'] %>&bln=<%= row['bulan'] %>&th=<%= row['tahun'] %>&type=haji" class="btn btn-block btn-danger">
                                                    Pesan Paket
                                                </a>
                                                <a href="/account/paket-haji/<%= row['kode_produk'] %>/<%= row['kdkantor'] %>/<%= row['tahun'] %>/<%= row['bulan'] %>/<%= row['nama_seo'] %>" class="btn btn-block btn-outline-success">
                                                    Detail Paket
                                                </a>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <% end %>
                        <nav aria-label="Page navigation" class="mt-1">
                          <ul class="pagination justify-content-center mb-0">
                            <li class="page-item">
                              <%= @page['link_prev'].html_safe %>
                            </li>
                            <% @page['html'].each do |page| %>
                                <%= page.html_safe %>
                            <% end %>
                            <li class="page-item">
                              <%= @page['link_next'].html_safe %>
                            </li>
                          </ul>
                        </nav>
                    <% else %>
                    <div class="w-blank text-center p-5">
                        <%= image_tag 'icon_blank/no_seat_umroh.png', :class => 'rounded mx-auto d-block', :alt => '' %>
                        <p class="mb-0 text-center">
                            Maaf, untuk sementara paket tidak tersedia
                        </p>
                    </div>
                    <% end %>
                </div>
                <!-- --------------------------------------------------- -->
            </div>
        </div>
    </section>
<% end %>
<% content_for :foot do %>
    <script type="text/javascript">

    </script>
<% end %>