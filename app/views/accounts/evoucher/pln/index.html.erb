<% content_for :head do %>
    <title>E-Voucher | Lebih Dari Sekedar Nikmatnya Ibadah</title>
<% end %>

<% content_for :abutours do %>
    <section class="c-dashboard">
        <div class="container">
            <div class="row">
                <!-- --------------------------------------------------- -->
                <div class="col-3 pr-4">
                    <div class="card c-dashboard-side pb-5">
                        <div class="card-body c-dashboard-side__item p-0">
                            <%= render template: 'accounts/partials/sidebar' %>
                        </div>
                    </div>
                </div>
                <!-- --------------------------------------------------- -->
                <div class="col-9 pl-0 pr-2 ml-15">
                    <div class="_landing | w-breadcrumb">
                        <ol class="breadcrumb border-bottom-0">
                            <li class="breadcrumb-item"><a href="/">Halaman awal</a></li>
                            <li class="breadcrumb-item active">Token Listrik</li>
                        </ol>
                    </div>
                    <!-- --------------------------------------------------- -->
                    <div class="card c-dashboard-user">
                        <%= render template: 'accounts/partials/bannerTop' %>
                    </div>
                    <!-- --------------------------------------------------- -->
                    <div class="c-bg-white-accounts">
                        <ul class="nav tabs-voucher mb-2">
                            <li class="nav-item">
                                <a class="nav-link <%= active_class('/tiket-pesawat') %>" href="/tiket-pesawat">
                                    Tiket Pesawat
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= active_class('/pulsa') %>" href="/pulsa">
                                    Beli Pulsa
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= active_class('/paket-data') %>" href="/paket-data">
                                    Paket Data
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= active_class('/token-listrik') %>" href="/token-listrik">
                                    Token Listrik
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= active_class('/voucher-game') %>" href="/voucher-game">
                                    Voucher Game
                                </a>
                            </li>
                        </ul>
                        <!-- --------------------------------------------------- -->
                        <form class="form-costumes" action="/token-listrik/detail" method="post">
                            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                            <div class="card c-dashboard-content mt-1 mb-0">
                                <div class="card-body c-dashboard-content__item">
                                    <div class="form-group row">
                                        <div class="col-7">
                                            <label>Nomor Meteran</label>
                                            <input type="text" name="id_pelanggan" class="form-control" value="" placeholder="" onkeyup="cekHarga(this.value, 'TokenListrik')" required>
                                        </div>

                                        <div class="col-5">
                                            <label>Nominal</label>
                                            <select id="nominalTokenListrik" name="nominal" class="form-control" onchange="active(this.value, 'TokenListrik')">
                                                <option value="0" disabled>
                                                    Pilih nominal...
                                                </option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-6">
                                            <label>Harga Bayar</label>
                                            <h5 class="ml-2" id="priceTagTokenListrik">
                                                Rp 0
                                            </h5>
                                        </div>

                                        <div class="col-6">
                                            <button class="btn btn-block btn-danger mt-3">Bayar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- --------------------------------------------------- -->
                </div>
                <!-- --------------------------------------------------- -->
            </div>
        </div>
    </section>
<% end %>

<% content_for :foot do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#nominalTokenListrik").select2({
                theme: "bootstrap"
            });
        });

        $('#nominalTokenListrik').on('change', function (e) {
            $('#priceTagTokenListrik').html($(this).find("option:selected").data('price'));
        });
    </script>
<% end %>